<!--main-->
<main class="main" role="main">
  <!--wrap-->
  <div class="wrap clearfix">
    <!--row-->
    <div class="row">
    <!--content-->
      <section class="content center full-width wow fadeInUp">
        <div class="modal container">
          <h3>Авторизация</h3>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field f-row">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, :placeholder => "Введите Ваш email"  %>
            </div>

            <div class="field f-row">
              <%= f.label :Пароль %><br />
              <%= f.password_field :password, autocomplete: "off", :placeholder => "Введите Ваш пароль"  %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="f-row">
                <%= f.check_box :remember_me %>
                <%= f.label :Запомнить_меня %>
              </div>
            <% end -%>

            <div class="actions f-row bwrap">
              <%= f.submit "Войти" %>
            </div>
            <p><a href="#">Забыли пароль?</a></p>
            <p>Нет аккаунта? <a href="register.html">Зарегистрируйтесь.</a></p>
          <% end %>
        </div>
      </section>
      <!--//content-->
    </div>
    <!--//row-->
  </div>
  <!--//wrap-->
</main>
<!--//main-->
